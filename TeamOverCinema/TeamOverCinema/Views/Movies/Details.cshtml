@model TeamOverCinema.Models.Movies

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Movies</h4>
    <hr />
    <dl class="row text-light">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieImg)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.MovieImg)">
        </dd>
        <dt class = "col-sm-2">
           Movie Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ComingSoon)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ComingSoon)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Seats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Seats - 20)
        </dd>
        <dt class = "col-sm-2">
            Seats Left
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeatsTaken)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MovieTrailer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MovieTrailer)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
